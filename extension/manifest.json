{
    "manifest_version": 3,
    "name": "Cybreturn CGL 智能助手",
    "version": "1.0.0",
    "description": "亚马逊 CGL 智能合规预审与报价工具",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.amazon.com/*",
                "*://*.amazon.cn/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "permissions": [
        "storage",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "*://*.amazon.com/*",
        "*://*.amazon.cn/*"
    ]
}